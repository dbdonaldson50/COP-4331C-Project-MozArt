<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.thefirstorder.mozart.About"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MozArt V 1.0"
        android:id="@+id/mozartVersion"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#0000CD"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Created By:"
        android:id="@+id/createdBy"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/mozartVersion"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="David Donaldson"
        android:id="@+id/david"
        android:layout_below="@+id/createdBy"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Juan Palomino"
        android:id="@+id/juan"
        android:layout_below="@+id/david"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Solomon Price"
        android:id="@+id/solomon"
        android:layout_below="@+id/juan"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Luis Velez"
        android:id="@+id/luis"
        android:layout_below="@+id/solomon"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#CD0000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coming Soon!"
        android:id="@+id/comingSoon"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/luis"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Playlists!"
        android:id="@+id/playlist"
        android:layout_below="@+id/comingSoon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="More Modes!"
        android:id="@+id/modes"
        android:layout_below="@+id/playlist"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
